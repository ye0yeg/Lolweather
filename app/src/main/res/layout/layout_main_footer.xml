<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_foot"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/main_foot_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        >
        <RadioButton
            android:id="@+id/main_foote_care_rb"
            style="@style/main_footer_radio"
            android:checked="true"
            android:drawableTop="@drawable/footer_drawable_care"
            android:text="Wether"
            />
        <RadioButton
            android:id="@+id/mian_footer_video_rb"
            style="@style/main_footer_radio"
            android:drawableTop="@drawable/footer_drawable_girl"
            android:text="girl" />
        <RadioButton
            android:id="@+id/mian_footer_home_rb"
            style="@style/main_footer_radio"
            android:drawableTop="@drawable/footer_drawable_video"
            android:text="things" />

    </RadioGroup>


</RelativeLayout>